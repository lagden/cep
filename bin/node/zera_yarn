#!/bin/sh

DIR="$(cd $(dirname $0) && pwd)"
BIN_DIR="$(cd $DIR/.. && pwd)"

# Import functions
. $BIN_DIR/helper/fn

# Go to current directory
CURR_FOLDER="$(pwd)"
cd $CURR_FOLDER

usage() {
	cat <<-EOF

  Usage: $0 [options]

  Options:
    -g        Generate .yarnrc.yml
    -h        Show usage

EOF
exit 0
}

GEN=0
while getopts ":g" opt
do
	case ${opt} in
		b) GEN=1 ;;
	esac
done

rm -rf \
	"${CURR_FOLDER}/node_modules" \
	"${CURR_FOLDER}/package-lock.json" \
	"${CURR_FOLDER}/yarn.lock" \
	"${CURR_FOLDER}/.yarn" \
	"${CURR_FOLDER}/.pnp.*"

if test "${GEN}" = "1"; then
	echo "nodeLinker: node-modules" > "${CURR_FOLDER}/.yarnrc.yml"
fi

yarn install

test $? -ne 0 && abort "yarn failed" || ok "zerado..."

yarn npm audit

exit 0
