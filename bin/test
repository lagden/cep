#!/bin/bash

abort() {
	printf "\n  \033[31mError: $@\033[0m\n\n" && exit 1
}

ok() {
	printf "\n  \033[32mOk: $@\033[0m\n\n"
}

_cleanup() {
	docker-compose -f $@ down --volumes --remove-orphans > /dev/null 2>&1
}

usage() {
	cat <<-EOF

  Usage: $0 [-b]

  Options:
    -b   Build image
    -h   Show usage

EOF
exit 0
}

DIR="$( cd -P "$( dirname "$0" )" && pwd )"
cd $DIR
cd ..

CURR_FOLDER=`pwd`
BUILD=""
SERVICE="test"
OPT="test"
COMPOSE_TEST="${CURR_FOLDER}/docker-compose.test.yml"

trap '_cleanup $COMPOSE_TEST; abort "Tests failed for unexpected reasons"' HUP INT QUIT PIPE TERM SIGINT SIGTERM

while getopts ":b" o
do
	case ${o} in
		b) BUILD="--build" ;;
		*) usage ;;
	esac
done

docker-compose \
	-f $COMPOSE_TEST \
	up \
	--force-recreate \
	--always-recreate-deps \
	--abort-on-container-exit \
	--exit-code-from $SERVICE \
	--remove-orphans \
	$BUILD \
	$SERVICE

if test $? -ne 0; then
	_cleanup $COMPOSE_TEST
	abort "Test FAIL"
fi

_cleanup $COMPOSE_TEST
ok "Test PASS"

exit 0
